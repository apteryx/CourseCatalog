<!DOCTYPE html>
<html>
<head>
  <title>CourseCatalog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">CourseCatalog</a>
      </div>
      <ul class="nav navbar-nav">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Subjects", subjects_path %></li>
        <li><%= link_to "Courses", courses_path %></li>
        <li><%= link_to "Instructors", instructors_path %></li>
        <li><%= link_to "Search", search_path %></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if session[:user_id] %>
          <li><%= button_to 'Logout', logout_path, :class => "btn btn-default navbar-btn", :id => "logout-btn" %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="container-fluid">
    <%= yield %>
  </div>

</body>
</html>
